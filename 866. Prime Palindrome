import java.util.Scanner;

public class PrimePalindrome
{
    public static void main(String[] args) 
    {
        Scanner scn = new Scanner(System.in);
        int no = scn.nextInt();
        System.out.println(primePalindrome(no));
        scn.close();
    }

    public static int primePalindrome(int n) 
    {
        /*if(n==1 ||n==2)
        {
            return 2;
        }
        if(n % 2 == 0)
        {
            n ++;
        }*/
        while(true)
       {
            if(palindrome(n) && prime(n))
            {
                return n;
            }
            n ++;
            if (n > 10_000_000  && n < 100_000_000)
            {
                n = 100_000_001;
            }
       }  
    }

    public static boolean prime(int no)
    {
        boolean flag = false;
        if(no == 0 || no == 1)
        {
            return flag;
        }
        for(int i = 2 ; i <= no / 2 ; i++)
        {
            if(no % i == 0)
            {
                return flag;
            }
        }
        if(!flag)
        {
            return true;
        }
        return false;
    }

    public static boolean palindrome(int no)
    {
        int rem = 0 ;
        int rev = 0 ;
        int temp = no;
        while(no != 0)
        {
            rem = no % 10 ;
            rev = (rev * 10) + rem ;
            no = no / 10;
        }
        if(temp == rev)
        {
            //System.out.println("checking palindrome : " + rev);
            return true;
        }
        return false;
    }
}
